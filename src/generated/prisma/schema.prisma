enum Role {
  USER
  TENANT
  ADMIN
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?
  role          Role     @default(USER)
  isVerified    Boolean  @default(false)
  firstName     String
  lastName      String?
  profilePicUrl String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // relations
  bookings Booking[]
  reviews  Review[]
  tenant   Tenant?
}

model Tenant {
  id         String     @id @default(cuid())
  userId     String     @unique
  company    String?
  phone      String?
  properties Property[]
  user       User       @relation(fields: [userId], references: [id])
}

model Property {
  id          String          @id @default(cuid())
  tenantId    String
  name        String
  city        String
  address     String
  category    String
  description String
  pictures    PropertyImage[]
  rooms       Room[]
  seasonal    SeasonalPrice[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  tenant      Tenant          @relation(fields: [tenantId], references: [id])
  reviews     Review[]
}

model PropertyImage {
  id         String   @id @default(cuid())
  propertyId String
  url        String
  property   Property @relation(fields: [propertyId], references: [id])
}

model Room {
  id           String             @id @default(cuid())
  propertyId   String
  type         String
  basePrice    Int // harga dasar dalam minimal unit (misal IDR)
  capacity     Int
  description  String?
  availability RoomAvailability[]
  bookings     Booking[]
  property     Property           @relation(fields: [propertyId], references: [id])
}

model RoomAvailability {
  id     String   @id @default(cuid())
  roomId String
  date   DateTime // per hari
  isOpen Boolean  @default(true) // closed date = tidak tersedia
  room   Room     @relation(fields: [roomId], references: [id])
}

model SeasonalPrice {
  id         String   @id @default(cuid())
  propertyId String
  startDate  DateTime
  endDate    DateTime
  type       String // "PERCENT" | "NOMINAL"
  value      Int // persentase (e.g. 20 = +20%) atau nominal (+IDR)
  applyAll   Boolean  @default(true) // semua hari di rentang, atau manual dates
  dates      Json? // [“2025-05-02”, ...] jika tidak applyAll
  property   Property @relation(fields: [propertyId], references: [id])
}

enum BookingStatus {
  PENDING
  AWAITING_CONFIRMATION
  PAID
  CANCELLED
  PROCESSING
  COMPLETED
}

enum PaymentMethod {
  MANUAL_TRANSFER
  GATEWAY
}

model Booking {
  id        String        @id @default(cuid())
  userId    String
  roomId    String
  checkIn   DateTime
  checkOut  DateTime
  nights    Int
  guests    Int
  amount    Int // final price (already adjusted)
  method    PaymentMethod
  status    BookingStatus @default(PENDING)
  expireAt  DateTime? // auto-cancel threshold (PENDING only)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id])
  room      Room          @relation(fields: [roomId], references: [id])
  payments  Payment[]
}

model Payment {
  id         String    @id @default(cuid())
  bookingId  String
  proofUrl   String?
  approvedBy String? // tenant userId
  approvedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  booking    Booking   @relation(fields: [bookingId], references: [id])
}

model Review {
  id         String   @id @default(cuid())
  propertyId String
  userId     String
  comment    String
  repliedBy  String? // tenant userId
  reply      String?
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}
