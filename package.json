{
    "name": "pwd-template-api",
    "version": "1.0.0",
    "description": "Property Renting API",
    "main": "index.js",
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon --files src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prepare": "husky install",
        "prisma:migrate": "dotenv -e .env.local -- npx prisma migrate dev",
        "prisma:reset": "dotenv -e .env.local -- npx prisma migrate reset",
        "prisma:push": "dotenv -e .env.local -- npx prisma db push",
        "prisma:generate": "npx prisma generate",
        "studio": "npx prisma studio"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "5.22.0",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "dotenv-cli": "^11.0.0",
        "express": "^5.1.0",
        "express-handlebars": "^8.0.4",
        "jsonwebtoken": "^9.0.2",
        "midtrans-client": "^1.4.3",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "nodemailer": "^7.0.11",
        "winston": "^3.18.3",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/handlebars": "^4.0.40",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/midtrans-client": "^1.4.0",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.10.1",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^7.0.4",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "commitizen": "^4.3.1",
        "commitlint": "^20.1.0",
        "cross-env": "^10.1.0",
        "cz-conventional-changelog": "^3.0.1",
        "eslint": "^9.39.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "nodemon": "^3.1.10",
        "prisma": "5.22.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
